<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 基础卡片样式 ==================== -->
    <Style x:Key="CardStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{DynamicResource RegionBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="CornerRadius"
                Value="8" />
        <Setter Property="Padding"
                Value="20" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000"
                                  Opacity="0.06"
                                  BlurRadius="3"
                                  ShadowDepth="1"
                                  Direction="270" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#000000"
                                          Opacity="0.1"
                                          BlurRadius="12"
                                          ShadowDepth="4"
                                          Direction="270" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- ==================== 工位卡片基础样式 ==================== -->
    <Style x:Key="WorkstationCardBaseStyle"
           TargetType="Border">
        <Setter Property="Background"
                Value="{DynamicResource RegionBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness"
                Value="2" />
        <Setter Property="CornerRadius"
                Value="8" />
        <Setter Property="Padding"
                Value="16" />
        <Setter Property="Cursor"
                Value="Hand" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000"
                                  Opacity="0.05"
                                  BlurRadius="2"
                                  ShadowDepth="1"
                                  Direction="270" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="BorderBrush"
                        Value="{DynamicResource PrimaryBrush}" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                          Opacity="0.15"
                                          BlurRadius="12"
                                          ShadowDepth="4"
                                          Direction="270" />
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <TranslateTransform Y="-2" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- ==================== 运行中状态卡片 ==================== -->
    <Style x:Key="WorkstationCardRunningStyle"
           TargetType="Border"
           BasedOn="{DynamicResource WorkstationCardBaseStyle}">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,0">
                    <GradientStop Color="{DynamicResource SuccessColor}"
                                  Offset="0" />
                    <GradientStop Color="{DynamicResource SuccessColor}"
                                  Offset="0.02" />
                    <GradientStop Color="{DynamicResource BorderColor}"
                                  Offset="0.02" />
                    <GradientStop Color="{DynamicResource BorderColor}"
                                  Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>



<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== 基础 Badge 样式 ==================== -->
    <Style x:Key="BaseBadgeStyle"
           TargetType="Border">
        <Setter Property="CornerRadius"
                Value="12" />
        <Setter Property="Padding"
                Value="8,4" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="BorderThickness"
                Value="1" />
    </Style>


    <!-- ==================== Success Badge ==================== -->
    <Style x:Key="BadgeSuccessStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource LightSuccessBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource SuccessBrush}" />
    </Style>


    <!-- ==================== Error Badge ==================== -->
    <Style x:Key="BadgeErrorStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource LightDangerBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource DangerBrush}" />
    </Style>


    <!-- ==================== Warning Badge ==================== -->
    <Style x:Key="BadgeWarningStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource LightWarningBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource WarningBrush}" />
    </Style>


    <!-- ==================== Info Badge ==================== -->
    <Style x:Key="BadgeInfoStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource LightInfoBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource InfoBrush}" />
    </Style>


    <!-- ==================== Offline Badge ==================== -->
    <Style x:Key="BadgeOfflineStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource DefaultBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource SecondaryBorderBrush}" />
    </Style>


    <!-- ==================== Primary Badge ==================== -->
    <Style x:Key="BadgePrimaryStyle"
           TargetType="Border"
           BasedOn="{DynamicResource BaseBadgeStyle}">
        <Setter Property="Background"
                Value="{DynamicResource LightPrimaryBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource PrimaryBrush}" />
    </Style>


    <!-- ==================== Badge 文本样式 ==================== -->
    <Style x:Key="BadgeTextSuccessStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource SuccessBrush}" />
    </Style>

    <Style x:Key="BadgeTextErrorStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource DangerBrush}" />
    </Style>

    <Style x:Key="BadgeTextWarningStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource DarkWarningBrush}" />
    </Style>

    <Style x:Key="BadgeTextInfoStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource DarkInfoBrush}" />
    </Style>

    <Style x:Key="BadgeTextOfflineStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="Foreground"
                Value="{DynamicResource SecondaryTextBrush}" />
    </Style>

</ResourceDictionary>
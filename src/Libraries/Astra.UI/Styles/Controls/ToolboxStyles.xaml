<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Astra.UI.Controls"
                    xmlns:converters="clr-namespace:Astra.UI.Converters"
                    xmlns:helpers="clr-namespace:Astra.UI.Helpers"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <!-- ==================== 工具箱字体资源 ==================== -->
    <FontFamily x:Key="ToolboxFontFamily">Segoe UI</FontFamily>
    <System:Double x:Key="ToolboxFontSizeSmall">12</System:Double>
    <System:Double x:Key="ToolboxFontSizeMedium">14</System:Double>
    <System:Double x:Key="ToolboxFontSizeLarge">16</System:Double>

    <!-- ==================== 工具箱转换器 ==================== -->
    <!-- 转换器已移动到 Themes/Converters.xaml，通过 Controls.xaml 引入 -->

    <!-- ==================== 工具箱工具栏样式 ==================== -->
    <Style x:Key="ToolboxToolbarStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <!-- ==================== 工具箱工具按钮样式 ==================== -->
    <Style x:Key="ToolboxToolButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Width" Value="64" />
        <Setter Property="Height" Value="72" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- 背景方形 -->
                        <Border x:Name="BackgroundSquare"
                                Width="52"
                                Height="52"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,2,0,0"
                                Background="{DynamicResource SecondaryRegionBrush}"
                                CornerRadius="6"
                                Opacity="0.6">
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                  Opacity="0.1"
                                                  BlurRadius="4"
                                                  ShadowDepth="1"
                                                  Direction="270" />
                            </Border.Effect>
                        </Border>
                        
                        <!-- 选中状态指示器 -->
                        <Border x:Name="SelectedIndicator"
                                Width="56"
                                Height="56"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,0,0,0"
                                BorderBrush="{DynamicResource PrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Opacity="0" />
                        
                        <!-- 内容 -->
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          Margin="0,4,0,0" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundSquare" Property="Background" Value="{DynamicResource PrimaryBrush}" />
                            <Setter TargetName="BackgroundSquare" Property="Opacity" Value="0.15" />
                            <Setter TargetName="BackgroundSquare" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                                      Opacity="0.3"
                                                      BlurRadius="8"
                                                      ShadowDepth="2"
                                                      Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter TargetName="BackgroundSquare" Property="Background" Value="{DynamicResource PrimaryBrush}" />
                            <Setter TargetName="BackgroundSquare" Property="Opacity" Value="0.2" />
                            <Setter TargetName="SelectedIndicator" Property="Opacity" Value="1" />
                            <Setter TargetName="BackgroundSquare" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                                      Opacity="0.4"
                                                      BlurRadius="12"
                                                      ShadowDepth="3"
                                                      Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== 工具箱面板样式 ==================== -->
    <Style x:Key="ToolboxPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="MinWidth" Value="280" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  Opacity="0.15"
                                  BlurRadius="16"
                                  ShadowDepth="4"
                                  Direction="270" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== 工具箱面板标题样式 ==================== -->
    <Style x:Key="ToolboxPanelTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ToolboxFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource ToolboxFontSizeMedium}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="Padding" Value="0,0,0,8" />
    </Style>

    <!-- ==================== 工具箱面板分隔符样式 ==================== -->
    <Style x:Key="ToolboxPanelSeparatorStyle" TargetType="Border">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="Opacity" Value="0.3" />
    </Style>

    <!-- ==================== 工具箱面板项样式 ==================== -->
    <Style x:Key="ToolboxPanelItemStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="80" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- 主容器 -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                helpers:BorderClipHelper.ClipToBounds="True">
                            <Border.BorderBrush>
                                <Binding Path="CurrentCategory.CategoryLightColor" RelativeSource="{RelativeSource AncestorType=controls:NodeToolBox}" />
                            </Border.BorderBrush>
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                  Opacity="0.08"
                                                  BlurRadius="6"
                                                  ShadowDepth="2"
                                                  Direction="270" />
                            </Border.Effect>
                            
                            <!-- 内容容器 -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        
                        <!-- 类别颜色指示器（顶部装饰条） -->
                        <Border x:Name="CategoryIndicator"
                                Height="3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                CornerRadius="8,8,0,0"
                                Opacity="1">
                            <Border.Background>
                                <Binding Path="CurrentCategory.CategoryColor" RelativeSource="{RelativeSource AncestorType=controls:NodeToolBox}" />
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 类别颜色通过数据绑定设置，不再使用触发器 -->
                        <!-- 鼠标悬停 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                            <Setter TargetName="MainBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                      Opacity="0.15"
                                                      BlurRadius="10"
                                                      ShadowDepth="3"
                                                      Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <!-- 按下状态 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource SecondaryRegionBrush}" />
                            <Setter TargetName="MainBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                      Opacity="0.1"
                                                      BlurRadius="4"
                                                      ShadowDepth="1"
                                                      Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>


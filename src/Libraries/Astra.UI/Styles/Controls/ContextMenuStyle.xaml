<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:Astra.UI.Helpers">

    <!-- ==================== ContextMenu 样式 ==================== -->
    
    <!-- MenuItem 分隔线样式 -->
    <Style x:Key="MenuSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Border Background="{TemplateBinding Background}"
                            Height="{TemplateBinding Height}"
                            Margin="{TemplateBinding Margin}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- MenuItem 样式 -->
    <Style x:Key="ThemedMenuItem" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Margin="1,0.5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 图标区域 -->
                            <ContentPresenter x:Name="Icon"
                                            Grid.Column="0"
                                            Content="{TemplateBinding Icon}"
                                            ContentSource="Icon"
                                            Margin="6,0,4,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center" />

                            <!-- 文本区域 -->
                            <ContentPresenter x:Name="HeaderHost"
                                            Grid.Column="1"
                                            Content="{TemplateBinding Header}"
                                            ContentSource="Header"
                                            RecognizesAccessKey="True"
                                            VerticalAlignment="Center"
                                            Margin="2,0" />

                            <!-- 快捷键提示区域 -->
                            <TextBlock x:Name="InputGestureText"
                                     Grid.Column="2"
                                     Text="{TemplateBinding InputGestureText}"
                                     Margin="6,0,4,0"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource SecondaryTextBrush}"
                                     FontSize="11" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 危险操作：鼠标悬停（使用危险色） -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsHighlighted" Value="True" />
                                <Condition Property="Tag" Value="Danger" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource LightDangerBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource DangerBrush}" />
                            <Setter TargetName="Border" Property="BorderThickness" Value="1" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                    Opacity="0.15"
                                                    BlurRadius="3"
                                                    ShadowDepth="1"
                                                    Direction="270" />
                                </Setter.Value>
                            </Setter>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Border"
                                                       Storyboard.TargetProperty="Opacity"
                                                       From="0.85"
                                                       To="1.0"
                                                       Duration="0:0:0.12" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                        </MultiTrigger>
                        <!-- 危险操作：按下 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsPressed" Value="True" />
                                <Condition Property="Tag" Value="Danger" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource DangerBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource ReverseTextBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource DangerBrush}" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                    Opacity="0.2"
                                                    BlurRadius="2"
                                                    ShadowDepth="1"
                                                    Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>
                        <!-- 普通操作：鼠标悬停（使用主题颜色） -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource LightPrimaryBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                            <Setter TargetName="Border" Property="BorderThickness" Value="1" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                    Opacity="0.15"
                                                    BlurRadius="3"
                                                    ShadowDepth="1"
                                                    Direction="270" />
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Border"
                                                       Storyboard.TargetProperty="Opacity"
                                                       From="0.85"
                                                       To="1.0"
                                                       Duration="0:0:0.12" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <!-- 普通操作：按下 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource ReverseTextBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                    Opacity="0.2"
                                                    BlurRadius="2"
                                                    ShadowDepth="1"
                                                    Direction="270" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <!-- 禁用 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource ThirdlyTextBrush}" />
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ContextMenu 样式 -->
    <Style x:Key="ThemedContextMenu" TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="MinWidth" Value="140" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContextMenu}">
                    <!-- 外层容器：用于承载阴影和3D效果 -->
                    <Grid>
                        <!-- 主阴影层（外阴影，增强深度感） -->
                        <Border x:Name="OuterShadowBorder"
                                Background="Transparent"
                                CornerRadius="6"
                                Margin="0,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                Opacity="0.35"
                                                BlurRadius="12"
                                                ShadowDepth="4"
                                                Direction="270" />
                            </Border.Effect>
                        </Border>
                        
                        <!-- 内阴影层（增强立体感） -->
                        <Border x:Name="InnerShadowBorder"
                                Background="Transparent"
                                CornerRadius="6"
                                Margin="0,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                                Opacity="0.12"
                                                BlurRadius="6"
                                                ShadowDepth="1.5"
                                                Direction="90" />
                            </Border.Effect>
                        </Border>
                        
                        <!-- 主容器：渐变背景 + 3D边框 -->
                        <Border x:Name="MainBorder"
                                CornerRadius="6"
                                Padding="4"
                                BorderThickness="1"
                                RenderTransformOrigin="0.5,0.5"
                                helpers:BorderClipHelper.ClipToBounds="True">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="0.95" ScaleY="0.95" />
                            </Border.RenderTransform>
                            
                            <!-- 背景使用主题颜色（纯色） -->
                            <Border.Background>
                                <SolidColorBrush Color="{DynamicResource SurfaceColor}" />
                            </Border.Background>
                            
                            <!-- 边框使用主题边框颜色（纯色） -->
                            <Border.BorderBrush>
                                <SolidColorBrush Color="{DynamicResource BorderColor}" />
                            </Border.BorderBrush>
                           
                            <!-- 内容区域 -->
                            <StackPanel IsItemsHost="True"
                                       KeyboardNavigation.DirectionalNavigation="Cycle" />
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 打开动画 -->
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleX"
                                                   From="0.92"
                                                   To="1.0"
                                                   Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                   Storyboard.TargetProperty="ScaleY"
                                                   From="0.92"
                                                   To="1.0"
                                                   Duration="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                                   Storyboard.TargetProperty="Opacity"
                                                   From="0"
                                                   To="1"
                                                   Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认样式（可选） -->
    <Style TargetType="{x:Type ContextMenu}" BasedOn="{StaticResource ThemedContextMenu}" />
    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource ThemedMenuItem}" />

</ResourceDictionary>

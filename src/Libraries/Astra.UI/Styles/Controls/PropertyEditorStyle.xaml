<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:selectors="clr-namespace:Astra.UI.Selectors"
                    xmlns:converters="clr-namespace:Astra.UI.Converters"
                    xmlns:local="clr-namespace:Astra.UI.Controls"
                    xmlns:hc="https://handyorg.github.io/handycontrol">

    <ResourceDictionary.MergedDictionaries>
        <!-- 引入转换器资源（确保模板中可以使用） -->
        <ResourceDictionary Source="../../Themes/Converters.xaml" />
        <!-- 引入输入控件样式 -->
        <ResourceDictionary Source="./InputStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ========================================
         编辑器专用样式（黄金配置）
    ========================================= -->

    <!-- TextBox 样式 -->
    <Style x:Key="CompactTextBoxStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource ModernTextBoxStyle}">
        <Setter Property="MinHeight"
                Value="36" />
        <Setter Property="FontSize"
                Value="13" />
        <Setter Property="Padding"
                Value="10,6" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- ComboBox 样式 -->
    <Style x:Key="CompactComboBoxStyle"
           TargetType="ComboBox"
           BasedOn="{StaticResource ModernComboBoxStyle}">
        <Setter Property="MinHeight"
                Value="36" />
        <Setter Property="FontSize"
                Value="13" />
        <Setter Property="Padding"
                Value="10,6" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <!-- 搜索框样式 -->
    <Style x:Key="SearchBoxStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource ModernTextBoxStyle}">
        <Setter Property="Background"
                Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="MinHeight"
                Value="32" />
        <Setter Property="Padding"
                Value="32,6,8,6" />
        <Setter Property="FontSize"
                Value="13" />
    </Style>


    <selectors:PropertyEditorTemplateSelector x:Key="EditorTemplateSelector" />

    <!-- ========================================
         阴影效果资源
    ========================================= -->
    <DropShadowEffect x:Key="NormalShadow"
                      Color="{DynamicResource ShadowColor}"
                      Opacity="0.03"
                      BlurRadius="4"
                      ShadowDepth="2"
                      Direction="270" />

    <DropShadowEffect x:Key="HoverShadow"
                      Color="{DynamicResource ShadowColor}"
                      Opacity="0.06"
                      BlurRadius="6"
                      ShadowDepth="2"
                      Direction="270" />

    <DropShadowEffect x:Key="FocusShadow"
                      Color="{DynamicResource PrimaryColor}"
                      Opacity="0.15"
                      BlurRadius="12"
                      ShadowDepth="0"
                      Direction="270" />

    <!-- ========================================
         Expander 切换按钮
    ========================================= -->
    <ControlTemplate x:Key="ExpanderToggleButtonTemplate"
                     TargetType="ToggleButton">
        <Border x:Name="Border"
                Background="Transparent"
                Padding="{TemplateBinding Padding}"
                HorizontalAlignment="Stretch"
                CornerRadius="4">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 箭头 -->
                <Border Grid.Column="0"
                        Width="16"
                        Height="16"
                        CornerRadius="8"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <Path x:Name="Arrow"
                          Data="M 6 4 L 10 8 L 6 12"
                          Stroke="{DynamicResource DarkPrimaryBrush}"
                          StrokeThickness="1.8"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round">
                        <Path.RenderTransform>
                            <RotateTransform Angle="0"
                                             CenterX="8"
                                             CenterY="8" />
                        </Path.RenderTransform>
                    </Path>
                </Border>

                <!-- 文本 -->
                <TextBlock Grid.Column="1"
                           Text="{TemplateBinding Content}"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{DynamicResource DarkPrimaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap"
                           TextTrimming="None" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked"
                     Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                             Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                             To="90"
                                             Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                             Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                             To="0"
                                             Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Border"
                        Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource LightPrimaryColor}"
                                         Opacity="0.3" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- ========================================
         属性编辑器数据模板
    ========================================= -->

    <!-- 默认文本编辑器 -->
    <DataTemplate x:Key="DefaultPropertyEditor">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 输入框 -->
            <TextBox Grid.Row="0"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"
                     ToolTip="{Binding Description}"
                     IsReadOnly="{Binding IsReadOnly}"
                     IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBoolConverter}}"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource CompactTextBoxStyle}">
                <TextBox.Resources>
                    <Style TargetType="TextBox"
                           BasedOn="{StaticResource CompactTextBoxStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource DangerBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource WarningBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Info">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource InfoBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- 错误消息 -->
            <Border Grid.Row="1"
                    Margin="0,4,0,0"
                    Padding="8,5"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource WarningColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Info">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource InfoColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding HasErrors}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="11"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ThirdlyTextBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Error">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource DangerBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Warning">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource WarningBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Info">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource InfoBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>

    <!-- 布尔编辑器 -->
    <DataTemplate x:Key="BoolPropertyEditor">
        <Border MinHeight="36"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Transparent"
                Padding="0">
            <CheckBox IsChecked="{Binding Value, Mode=TwoWay}"
                      ToolTip="{Binding Description}"
                      IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBoolConverter}}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      FontSize="13" />
        </Border>
    </DataTemplate>

    <!-- 数字编辑器 -->
    <DataTemplate x:Key="NumericPropertyEditor">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"
                     ToolTip="{Binding Description}"
                     IsReadOnly="{Binding IsReadOnly}"
                     IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBoolConverter}}"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource CompactTextBoxStyle}">
                <TextBox.Resources>
                    <Style TargetType="TextBox"
                           BasedOn="{StaticResource CompactTextBoxStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource DangerBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource WarningBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- 错误消息 -->
            <Border Grid.Row="1"
                    Margin="0,4,0,0"
                    Padding="8,5"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource WarningColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="11"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ThirdlyTextBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Error">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource DangerBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Warning">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource WarningBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Info">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource InfoBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>


    <!-- ========================================
         属性行样式
    ========================================= -->
    <Style x:Key="PropertyRowStyle"
           TargetType="Border">
        <Setter Property="MinHeight"
                Value="52" />
        <Setter Property="Padding"
                Value="10,8" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Margin"
                Value="0,1,0,0" />
        <Setter Property="CornerRadius"
                Value="5" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource LightPrimaryColor}"
                                         Opacity="0.08" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================
         分组样式
    ========================================= -->
    <Style x:Key="PropertyGroupStyle"
           TargetType="Expander">
        <Setter Property="IsExpanded"
                Value="True" />
        <Setter Property="Margin"
                Value="0,6,0,0" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                              Opacity="0.06"
                                              BlurRadius="10"
                                              ShadowDepth="3"
                                              Direction="270" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 标题区域 -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource BackgroundBrush}"
                                    CornerRadius="8,8,0,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <ToggleButton IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              OverridesDefaultStyle="True"
                                              Template="{StaticResource ExpanderToggleButtonTemplate}"
                                              Content="{TemplateBinding Header}"
                                              Padding="10,8"
                                              HorizontalAlignment="Stretch"
                                              HorizontalContentAlignment="Stretch" />
                            </Border>

                            <!-- 内容区域 -->
                            <Border Grid.Row="1"
                                    x:Name="ContentBorder"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="0,0,8,8"
                                    Visibility="Collapsed">
                                <ContentPresenter Margin="0,4,0,6" />
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded"
                                 Value="True">
                            <Setter TargetName="ContentBorder"
                                    Property="Visibility"
                                    Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================
         PropertyEditorHost 默认样式
    ========================================= -->
    <!-- PropertyEditorHost 使用自定义模板确保内容能正确显示和拉伸 -->
    <Style TargetType="{x:Type local:PropertyEditorHost}">
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
      
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PropertyEditorHost}">
                    <!-- 使用 Border 作为容器，确保内容能够正确测量 -->
                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="{TemplateBinding Padding}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================
         PropertyEditorControl 默认样式
    ========================================= -->
    <Style TargetType="{x:Type local:PropertyEditorControl}">
        <Setter Property="Background"
                Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Foreground"
                Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="FontSize"
                Value="13" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PropertyEditorControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                              Opacity="0.1"
                                              BlurRadius="16"
                                              ShadowDepth="4"
                                              Direction="270" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 搜索框区域 -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="8,8,0,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="10"
                                    Visibility="{TemplateBinding ShowSearchBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <TextBox x:Name="PART_SearchBox"
                                             Style="{StaticResource SearchBoxStyle}" />

                                    <!-- 搜索图标 -->
                                    <Path Data="M 9,2 C 5.1,2 2,5.1 2,9 2,12.9 5.1,16 9,16 10.7,16 12.3,15.4 13.5,14.3 L 18.6,19.4 20,18 14.9,12.9 C 16,11.7 16.6,10.1 16.6,8.4 16.6,4.5 13.5,1.4 9.6,1.4 Z M 9,4 C 11.8,4 14,6.2 14,9 14,11.8 11.8,14 9,14 6.2,14 4,11.8 4,9 4,6.2 6.2,4 9,4 Z"
                                          Fill="{DynamicResource ThirdlyTextBrush}"
                                          Width="14"
                                          Height="14"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="12,0,0,0"
                                          IsHitTestVisible="False" />

                                    <!-- 占位符文本 -->
                                    <TextBlock Text="搜索属性..."
                                               Foreground="{DynamicResource ThirdlyTextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="38,0,0,0"
                                               FontSize="13"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=PART_SearchBox}"
                                                                 Value="">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- 属性列表 -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Padding="8,4,8,8">
                                <ItemsControl x:Name="PART_PropertiesContainer"
                                              ItemsSource="{Binding PropertiesView}">
                                    <!-- 分组样式 -->
                                    <ItemsControl.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="GroupItem">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="GroupItem">
                                                                <Expander x:Name="GroupExpander"
                                                                          Header="{Binding Name}"
                                                                          Style="{StaticResource PropertyGroupStyle}"
                                                                          Visibility="{Binding ItemCount, Converter={StaticResource GroupItemCountToVisibilityConverter}}">
                                                                    <ItemsPresenter />
                                                                </Expander>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                        </GroupStyle>
                                    </ItemsControl.GroupStyle>

                                    <!-- 属性项模板 -->
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource PropertyRowStyle}">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="{Binding LabelWidthRatio, 
                                                            RelativeSource={RelativeSource AncestorType=local:PropertyEditorControl}, 
                                                            Converter={StaticResource RatioToGridLengthConverter}}"
                                                                          MinWidth="80" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- 属性名称 -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding DisplayName}"
                                                               ToolTip="{Binding Description}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"
                                                               TextTrimming="CharacterEllipsis"
                                                               FontWeight="Medium"
                                                               FontSize="13"
                                                               Foreground="{DynamicResource SecondaryTextBrush}" />

                                                    <!-- 编辑器 -->
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplateSelector="{StaticResource EditorTemplateSelector}"
                                                                      HorizontalAlignment="Stretch"
                                                                      VerticalAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:selectors="clr-namespace:Astra.UI.Selectors"
                    xmlns:converters="clr-namespace:Astra.UI.Converters"
                    xmlns:local="clr-namespace:Astra.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <!-- 引入输入控件样式 -->
        <ResourceDictionary Source="./InputStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <!-- 基于别名样式创建 PropertyEditor 专用的文本框样式 -->
    <Style x:Key="CompactTextBoxStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource ModernTextBoxStyle}">
        <Setter Property="MinHeight"
                Value="30" />
       
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Padding"
                Value="8,5" />
    </Style>


    <!-- 基于别名样式创建 PropertyEditor 专用的 ComboBox 样式 -->
    <Style x:Key="CompactComboBoxStyle"
           TargetType="ComboBox"
           BasedOn="{StaticResource ModernComboBoxStyle}">
        <Setter Property="MinHeight"
                Value="30" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Padding"
                Value="8,5" />
    </Style>

    <!-- ========================================
         搜索框样式（必须在 ModernTextBoxStyle 之后定义）
    ========================================= -->
    <Style x:Key="SearchBoxStyle"
           TargetType="TextBox"
           BasedOn="{StaticResource ModernTextBoxStyle}">
        <Setter Property="Background"
                Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="Padding"
                Value="16,5,8,5" />
    </Style>



    <!-- ========================================
       值转换器
       注意：InputStyles.xaml 已经在 Controls.xaml 中合并（在 PropertyEditorStyle.xaml 之前），
       所以可以直接引用其中的样式
  ========================================= -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    <converters:RatioToGridLengthConverter x:Key="RatioToGridLengthConverter" />
    <converters:GroupItemCountToVisibilityConverter x:Key="GroupItemCountToVisibilityConverter" />

    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <!-- ========================================
       编辑器模板选择器
  ========================================= -->
    <selectors:PropertyEditorTemplateSelector x:Key="EditorTemplateSelector" />

    <!-- ========================================
         阴影效果资源
    ========================================= -->
    <DropShadowEffect x:Key="NormalShadow"
                      Color="{DynamicResource ShadowColor}"
                      Opacity="0.03"
                      BlurRadius="4"
                      ShadowDepth="2"
                      Direction="270" />

    <DropShadowEffect x:Key="HoverShadow"
                      Color="{DynamicResource ShadowColor}"
                      Opacity="0.06"
                      BlurRadius="6"
                      ShadowDepth="2"
                      Direction="270" />

    <DropShadowEffect x:Key="FocusShadow"
                      Color="{DynamicResource PrimaryColor}"
                      Opacity="0.15"
                      BlurRadius="12"
                      ShadowDepth="0"
                      Direction="270" />



    <!-- ========================================
         现代化 Expander 切换按钮
    ========================================= -->
    <ControlTemplate x:Key="ExpanderToggleButtonTemplate"
                     TargetType="ToggleButton">
        <Border x:Name="Border"
                Background="Transparent"
                Padding="{TemplateBinding Padding}"
                HorizontalAlignment="Stretch"
                CornerRadius="4">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 箭头容器（带圆形背景） -->
                <Border Grid.Column="0"
                        Width="16"
                        Height="16"
                      
                        CornerRadius="8"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <Path x:Name="Arrow"                 
                          Data="M 6 4 L 10 8 L 6 12"
                          Stroke="{DynamicResource DarkPrimaryBrush}"
                          StrokeThickness="1.8"
                         
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round">
                        <Path.RenderTransform>
                            <RotateTransform Angle="0"
                                             CenterX="8"
                                             CenterY="8" />
                        </Path.RenderTransform>
                    </Path>
                </Border>

                <!-- 文本 -->
                <TextBlock Grid.Column="1"
                           Text="{TemplateBinding Content}"
                           FontWeight="SemiBold"
                           FontSize="12.5"
                           Foreground="{DynamicResource DarkPrimaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Stretch"
                           TextWrapping="Wrap"
                           TextTrimming="None" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked"
                     Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                             Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                             To="90"
                                             Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                             Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                             To="0"
                                             Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter TargetName="Border"
                        Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource LightPrimaryColor}"
                                         Opacity="0.3" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

  
    <!-- ========================================
         属性编辑器数据模板
    ========================================= -->

    <!-- 默认文本编辑器 -->
    <DataTemplate x:Key="DefaultPropertyEditor">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 输入框 -->
            <TextBox Grid.Row="0"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"
                     ToolTip="{Binding Description}"
                     IsReadOnly="{Binding IsReadOnly}"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource CompactTextBoxStyle}">
                <TextBox.Resources>
                    <Style TargetType="TextBox"
                           BasedOn="{StaticResource CompactTextBoxStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource DangerBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource WarningBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Info">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource InfoBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- 错误消息 -->
            <Border Grid.Row="1"
                    Margin="0,3,0,0"
                    Padding="7,4"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <!-- Error 状态 -->
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <!-- Warning 状态 -->
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource WarningColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <!-- Info 状态 -->
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Info">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource InfoColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <!-- 当 HasErrors 为 True 时也显示（备用方案） -->
                            <DataTrigger Binding="{Binding HasErrors}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="11"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ThirdlyTextBrush}" />
                            <Style.Triggers>
                                <!-- 根据错误严重程度设置颜色 -->
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Error">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource DangerBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Warning">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource WarningBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Info">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource InfoBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>

    <!-- 布尔编辑器 -->
    <DataTemplate x:Key="BoolPropertyEditor">
        <Border HorizontalAlignment="Stretch"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                MinHeight="30"
                Padding="8,0"
                Effect="{StaticResource NormalShadow}">
            <CheckBox IsChecked="{Binding Value, Mode=TwoWay}"
                      ToolTip="{Binding Description}"
                      IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBoolConverter}}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left">
                <CheckBox.Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="Foreground"
                                Value="{DynamicResource SecondaryTextBrush}" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CheckBox">
                                    <Grid Background="Transparent">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border x:Name="CheckBoxBorder"
                                                Width="18"
                                                Height="18"
                                                Background="{DynamicResource SurfaceBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="2"
                                                CornerRadius="4"
                                                VerticalAlignment="Center">
                                            <Path x:Name="CheckMark"
                                                  Data="M 2 6 L 6 10 L 14 2"
                                                  Stroke="{DynamicResource SurfaceBrush}"
                                                  StrokeThickness="2.5"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Visibility="Collapsed"
                                                  Stretch="Uniform"
                                                  Margin="3" />
                                        </Border>

                                        <ContentPresenter Grid.Column="1"
                                                          Margin="8,0,0,0"
                                                          VerticalAlignment="Center" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked"
                                                 Value="True">
                                            <Setter TargetName="CheckBoxBorder"
                                                    Property="Background"
                                                    Value="{DynamicResource PrimaryBrush}" />
                                            <Setter TargetName="CheckBoxBorder"
                                                    Property="BorderBrush"
                                                    Value="{DynamicResource PrimaryBrush}" />
                                            <Setter TargetName="CheckMark"
                                                    Property="Visibility"
                                                    Value="Visible" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="CheckBoxBorder"
                                                    Property="BorderBrush"
                                                    Value="{DynamicResource PrimaryBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter TargetName="CheckBoxBorder"
                                                    Property="Background"
                                                    Value="{DynamicResource SecondaryRegionBrush}" />
                                            <Setter TargetName="CheckBoxBorder"
                                                    Property="BorderBrush"
                                                    Value="{DynamicResource BorderBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </CheckBox.Style>
            </CheckBox>
        </Border>
    </DataTemplate>

    <!-- 数字编辑器 -->
    <DataTemplate x:Key="NumericPropertyEditor">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"
                     ToolTip="{Binding Description}"
                     IsReadOnly="{Binding IsReadOnly}"
                     HorizontalAlignment="Stretch"
                     Style="{StaticResource CompactTextBoxStyle}">
                <TextBox.Resources>
                    <Style TargetType="TextBox"
                           BasedOn="{StaticResource CompactTextBoxStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource DangerBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource WarningBrush}" />
                                <Setter Property="BorderThickness"
                                        Value="2" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- 错误消息 -->
            <Border Grid.Row="1"
                    Margin="0,3,0,0"
                    Padding="7,4"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Error">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource DangerColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ValidationSeverity}"
                                         Value="Warning">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource WarningColor}"
                                                         Opacity="0.1" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Text="{Binding ErrorMessage}"
                           FontSize="11"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ThirdlyTextBrush}" />
                            <Style.Triggers>
                                <!-- 根据错误严重程度设置颜色 -->
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Error">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource DangerBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Warning">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource WarningBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ValidationSeverity}"
                                             Value="Info">
                                    <Setter Property="Foreground"
                                            Value="{DynamicResource InfoBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>
        </Grid>
    </DataTemplate>

    <!-- 枚举编辑器 -->
    <DataTemplate x:Key="EnumPropertyEditor">
        <ComboBox ItemsSource="{Binding EnumValues}"
                  SelectedItem="{Binding Value, Mode=TwoWay}"
                  ToolTip="{Binding Description}"
                  IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBoolConverter}}"
                  Style="{StaticResource CompactComboBoxStyle}" />
    </DataTemplate>

    <!-- 集合属性显示 -->
    <DataTemplate x:Key="CollectionPropertyEditor">
        <Border HorizontalAlignment="Stretch"
                Background="{DynamicResource SecondaryRegionBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                MinHeight="30"
                Padding="8,0"
                Effect="{StaticResource NormalShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 图标 -->
                <Path Grid.Column="0"
                      Data="M 2 4 L 14 4 M 2 8 L 14 8 M 2 12 L 14 12"
                      Stroke="{DynamicResource ThirdlyTextBrush}"
                      StrokeThickness="1.5"
                      StrokeStartLineCap="Round"
                      Width="12"
                      Height="12"
                      Stretch="Uniform"
                      VerticalAlignment="Center"
                      Margin="0,0,7,0" />

                <TextBlock Grid.Column="1"
                           Text="集合属性"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource ThirdlyTextBrush}"
                           FontStyle="Italic"
                           FontSize="11"
                           ToolTip="集合属性需要自定义编辑器" />
            </Grid>
        </Border>
    </DataTemplate>

    <!-- ========================================
         属性行样式
    ========================================= -->
    <Style x:Key="PropertyRowStyle"
           TargetType="Border">
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="8,4" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Margin"
                Value="0,1,0,0" />
        <Setter Property="CornerRadius"
                Value="4" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource LightPrimaryColor}"
                                         Opacity="0.12" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================
         分组样式
    ========================================= -->
    <Style x:Key="PropertyGroupStyle"
           TargetType="Expander">
        <Setter Property="IsExpanded"
                Value="True" />
        <Setter Property="Margin"
                Value="0,5,0,0" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="HorizontalContentAlignment"
                Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                              Opacity="0.06"
                                              BlurRadius="10"
                                              ShadowDepth="3"
                                              Direction="270" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 标题区域 -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource BackgroundBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <ToggleButton IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              OverridesDefaultStyle="True"
                                              Template="{StaticResource ExpanderToggleButtonTemplate}"
                                              Content="{TemplateBinding Header}"
                                              Padding="8,6,8,6"
                                              HorizontalAlignment="Stretch"
                                              HorizontalContentAlignment="Stretch" />
                            </Border>

                            <!-- 内容区域 -->
                            <Border Grid.Row="1"
                                    x:Name="ContentBorder"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="8"
                                    Visibility="Collapsed">
                                <ContentPresenter Margin="0,3,0,5" />
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded"
                                 Value="True">
                            <Setter TargetName="ContentBorder"
                                    Property="Visibility"
                                    Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ========================================
         PropertyEditorControl 默认样式
    ========================================= -->
    <Style TargetType="{x:Type local:PropertyEditorControl}">
        <Setter Property="Background"
                Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Foreground"
                Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PropertyEditorControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                              Opacity="0.1"
                                              BlurRadius="16"
                                              ShadowDepth="4"
                                              Direction="270" />
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 搜索框区域 -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="8,8,0,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="8"
                                    Visibility="{TemplateBinding ShowSearchBox, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <TextBox x:Name="PART_SearchBox"
                                             Style="{StaticResource SearchBoxStyle}" />

                                    <!-- 搜索图标 -->
                                    <Path Data="M 9,2 C 5.1,2 2,5.1 2,9 2,12.9 5.1,16 9,16 10.7,16 12.3,15.4 13.5,14.3 L 18.6,19.4 20,18 14.9,12.9 C 16,11.7 16.6,10.1 16.6,8.4 16.6,4.5 13.5,1.4 9.6,1.4 Z M 9,4 C 11.8,4 14,6.2 14,9 14,11.8 11.8,14 9,14 6.2,14 4,11.8 4,9 4,6.2 6.2,4 9,4 Z"
                                          Fill="{DynamicResource ThirdlyTextBrush}"
                                          Width="14"
                                          Height="14"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="16,0,0,0"
                                          IsHitTestVisible="False" />

                                    <!-- 占位符文本 -->
                                    <TextBlock Text="搜索属性..."
                                               Foreground="{DynamicResource ThirdlyTextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="38,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=PART_SearchBox}"
                                                                 Value="">
                                                        <Setter Property="Visibility"
                                                                Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- 属性列表 -->
                            <ScrollViewer Grid.Row="1"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Padding="6,0,6,6">
                                <ItemsControl x:Name="PART_PropertiesContainer"
                                              ItemsSource="{Binding PropertiesView}">
                                    <!-- 分组样式 -->
                                    <ItemsControl.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.ContainerStyle>
                                                <Style TargetType="GroupItem">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="GroupItem">
                                                                <Expander x:Name="GroupExpander"
                                                                          Header="{Binding Name}"
                                                                          Style="{StaticResource PropertyGroupStyle}"
                                                                          Visibility="{Binding ItemCount, Converter={StaticResource GroupItemCountToVisibilityConverter}}">
                                                                    <ItemsPresenter />
                                                                </Expander>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.ContainerStyle>
                                        </GroupStyle>
                                    </ItemsControl.GroupStyle>

                                    <!-- 属性项模板 -->
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource PropertyRowStyle}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="{Binding LabelWidthRatio, 
                                                            RelativeSource={RelativeSource AncestorType=local:PropertyEditorControl}, 
                                                            Converter={StaticResource RatioToGridLengthConverter}}"
                                                                          MinWidth="80" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- 属性名称 -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding DisplayName}"
                                                               ToolTip="{Binding Description}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"
                                                               TextTrimming="CharacterEllipsis"
                                                               FontWeight="Medium"
                                                               FontSize="12"
                                                               Foreground="{DynamicResource SecondaryTextBrush}" />

                                                    <!-- 编辑器 -->
                                                    <ContentPresenter Grid.Column="1"
                                                                      Content="{Binding}"
                                                                      ContentTemplateSelector="{StaticResource EditorTemplateSelector}"
                                                                      HorizontalAlignment="Stretch" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
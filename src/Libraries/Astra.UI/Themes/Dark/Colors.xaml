<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- ==================== 暗黑主题 Dark Theme - 重新设计 ==================== -->
    <!-- 灵感：现代感 + 高对比度 + 优雅暗色 -->

    <!-- 主色系 - 亮蓝色 -->
    <Color x:Key="LightPrimaryColor">#1E3A5F</Color>
    <Color x:Key="PrimaryColor">#52A9FF</Color>
    <Color x:Key="DarkPrimaryColor">#3D8FE8</Color>

    <!-- 危险/错误色 - 柔和红 -->
    <Color x:Key="LightDangerColor">#4A2828</Color>
    <Color x:Key="DangerColor">#FF6B6B</Color>
    <Color x:Key="DarkDangerColor">#FF5252</Color>

    <!-- 警告色 - 温暖橙 -->
    <Color x:Key="LightWarningColor">#4A3A28</Color>
    <Color x:Key="WarningColor">#FFB347</Color>
    <Color x:Key="DarkWarningColor">#FF9F1C</Color>

    <!-- 信息色 - 青色 -->
    <Color x:Key="LightInfoColor">#1E3A4A</Color>
    <Color x:Key="InfoColor">#4DD0E1</Color>
    <Color x:Key="DarkInfoColor">#26C6DA</Color>

    <!-- 成功色 - 清新绿 -->
    <Color x:Key="LightSuccessColor">#284A2F</Color>
    <Color x:Key="SuccessColor">#6BCF7F</Color>
    <Color x:Key="DarkSuccessColor">#4CAF50</Color>

    <!-- 文字色 - 高对比度 -->
    <Color x:Key="PrimaryTextColor">#F5F5F5</Color>
    <Color x:Key="SecondaryTextColor">#C0C0C0</Color>
    <Color x:Key="ThirdlyTextColor">#909090</Color>
    <Color x:Key="ReverseTextColor">#FFFFFF</Color>

    <!-- 边框色 - 清晰边框 -->
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="SecondaryBorderColor">#505050</Color>

    <!-- 背景色 - 层次分明的灰黑色系 -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="RegionColor">#282828</Color>
    <Color x:Key="SecondaryRegionColor">#323232</Color>
    <Color x:Key="ThirdlyRegionColor">#3D3D3D</Color>

    <!-- 标题色 - 亮蓝 -->
    <Color x:Key="TitleColor">#52A9FF</Color>
    <Color x:Key="SecondaryTitleColor">#75BDFF</Color>

    <!-- 默认色 -->
    <Color x:Key="DefaultColor">#3D3D3D</Color>
    <Color x:Key="DarkDefaultColor">#323232</Color>

    <!-- 强调色 - 紫罗兰 -->
    <Color x:Key="AccentColor">#AB47BC</Color>
    <Color x:Key="DarkAccentColor">#8E24AA</Color>

    <!-- 遮罩色 -->
    <Color x:Key="MaskColor">#DD000000</Color>

    <!-- 阴影色 -->
    <Color x:Key="ShadowColor">#000000</Color>

    <!-- ==================== Brush 资源 ==================== -->

    <SolidColorBrush x:Key="LightPrimaryBrush"
                     Color="{DynamicResource LightPrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="DarkPrimaryBrush"
                     Color="{DynamicResource DarkPrimaryColor}" />

    <SolidColorBrush x:Key="LightDangerBrush"
                     Color="{DynamicResource LightDangerColor}" />
    <SolidColorBrush x:Key="DangerBrush"
                     Color="{DynamicResource DangerColor}" />
    <SolidColorBrush x:Key="DarkDangerBrush"
                     Color="{DynamicResource DarkDangerColor}" />

    <SolidColorBrush x:Key="LightWarningBrush"
                     Color="{DynamicResource LightWarningColor}" />
    <SolidColorBrush x:Key="WarningBrush"
                     Color="{DynamicResource WarningColor}" />
    <SolidColorBrush x:Key="DarkWarningBrush"
                     Color="{DynamicResource DarkWarningColor}" />

    <SolidColorBrush x:Key="LightInfoBrush"
                     Color="{DynamicResource LightInfoColor}" />
    <SolidColorBrush x:Key="InfoBrush"
                     Color="{DynamicResource InfoColor}" />
    <SolidColorBrush x:Key="DarkInfoBrush"
                     Color="{DynamicResource DarkInfoColor}" />

    <SolidColorBrush x:Key="LightSuccessBrush"
                     Color="{DynamicResource LightSuccessColor}" />
    <SolidColorBrush x:Key="SuccessBrush"
                     Color="{DynamicResource SuccessColor}" />
    <SolidColorBrush x:Key="DarkSuccessBrush"
                     Color="{DynamicResource DarkSuccessColor}" />

    <SolidColorBrush x:Key="PrimaryTextBrush"
                     Color="{DynamicResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush"
                     Color="{DynamicResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="ThirdlyTextBrush"
                     Color="{DynamicResource ThirdlyTextColor}" />
    <SolidColorBrush x:Key="ReverseTextBrush"
                     Color="{DynamicResource ReverseTextColor}" />

    <SolidColorBrush x:Key="BorderBrush"
                     Color="{DynamicResource BorderColor}" />
    <SolidColorBrush x:Key="SecondaryBorderBrush"
                     Color="{DynamicResource SecondaryBorderColor}" />

    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="{DynamicResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush"
                     Color="{DynamicResource SurfaceColor}" />
    <SolidColorBrush x:Key="RegionBrush"
                     Color="{DynamicResource RegionColor}" />
    <SolidColorBrush x:Key="SecondaryRegionBrush"
                     Color="{DynamicResource SecondaryRegionColor}" />
    <SolidColorBrush x:Key="ThirdlyRegionBrush"
                     Color="{DynamicResource ThirdlyRegionColor}" />

    <SolidColorBrush x:Key="TitleBrush"
                     Color="{DynamicResource TitleColor}" />
    <SolidColorBrush x:Key="SecondaryTitleBrush"
                     Color="{DynamicResource SecondaryTitleColor}" />

    <SolidColorBrush x:Key="DefaultBrush"
                     Color="{DynamicResource DefaultColor}" />
    <SolidColorBrush x:Key="DarkDefaultBrush"
                     Color="{DynamicResource DarkDefaultColor}" />

    <SolidColorBrush x:Key="AccentBrush"
                     Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="DarkAccentBrush"
                     Color="{DynamicResource DarkAccentColor}" />

    <SolidColorBrush x:Key="MaskBrush"
                     Color="{DynamicResource MaskColor}" />
</ResourceDictionary>
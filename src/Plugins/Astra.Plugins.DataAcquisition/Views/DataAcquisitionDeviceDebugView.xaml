<UserControl x:Class="Astra.Plugins.DataAcquisition.Views.DataAcquisitionDeviceDebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题和状态 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding DeviceName, StringFormat='调试: {0}'}" 
                       FontSize="16" FontWeight="Bold"/>
            <Border Grid.Column="1" Background="#4CAF50" 
                    CornerRadius="3" Padding="8,4">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           FontWeight="SemiBold"/>
            </Border>
        </Grid>

        <!-- 设备信息卡片 -->
        <hc:Card Grid.Row="1" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="序列号" FontSize="12" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding SerialNumber}" FontSize="14" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="采样率" FontSize="12" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SampleRate, StringFormat='{}{0} Hz'}" FontSize="14" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="通道数" FontSize="12" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ChannelCount}" FontSize="14" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="缓冲区" FontSize="12" Foreground="Gray"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding BufferSize}" FontSize="14" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="设备ID:" FontSize="11" Foreground="Gray" Margin="0,10,0,0"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding DeviceId}" FontSize="11" Margin="0,10,0,0"/>
            </Grid>
        </hc:Card>

        <!-- 统计信息 -->
        <hc:Card Grid.Row="2" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="统计信息" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="接收帧数" FontSize="12" Foreground="Gray"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding TotalFramesReceived, StringFormat='{}{0:N0}'}" 
                               FontSize="16" FontWeight="Bold" Foreground="#2196F3"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="接收字节数" FontSize="12" Foreground="Gray"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalBytesReceived, StringFormat='{}{0:N0} B'}" 
                               FontSize="16" FontWeight="Bold" Foreground="#4CAF50"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="最后数据时间" FontSize="12" Foreground="Gray"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding LastDataTime, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                               FontSize="14" FontWeight="SemiBold"/>

                    <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                            Content="重置统计" 
                            Command="{Binding ResetStatisticsCommand}" 
                            Margin="0,10,0,0" 
                            HorizontalAlignment="Center" 
                            Width="100"/>
                </Grid>
            </Grid>
        </hc:Card>

        <!-- 日志区域 -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="日志" FontSize="14" FontWeight="Bold"/>
                <Button Grid.Column="1" Content="清空" Command="{Binding ClearLogsCommand}" 
                        Padding="10,2" FontSize="11"/>
            </Grid>

            <ListBox Grid.Row="1" ItemsSource="{Binding LogMessages}" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     MaxHeight="200"
                     Background="#F5F5F5"
                     BorderThickness="1"
                     BorderBrush="#E0E0E0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   TextWrapping="Wrap" 
                                   FontFamily="Consolas" 
                                   FontSize="11" 
                                   Margin="5,2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>

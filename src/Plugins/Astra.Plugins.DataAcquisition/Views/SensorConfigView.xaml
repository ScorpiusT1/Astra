<UserControl x:Class="Astra.Plugins.DataAcquisition.Views.SensorConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewmodels="clr-namespace:Astra.Plugins.DataAcquisition.ViewModels"
             xmlns:configs="clr-namespace:Astra.Plugins.DataAcquisition.Configs"
             xmlns:converters="clr-namespace:Astra.UI.Converters;assembly=Astra.UI"
             xmlns:pluginConverters="clr-namespace:Astra.Plugins.DataAcquisition.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=viewmodels:SensorConfigViewModel}">
    <UserControl.Resources>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource DefaultModernTextBoxStyle}" />
        <Style TargetType="ComboBox"
               BasedOn="{StaticResource ModernComboBoxStyle}" />
        <Style TargetType="Button"
               BasedOn="{StaticResource PrimaryButtonStyle}" />
        <Style TargetType="DatePicker"
               BasedOn="{StaticResource ModernDatePickerStyle}" />
        <Style TargetType="Calendar"
               BasedOn="{StaticResource ModernCalendarStyle}" />
        <Style TargetType="CalendarButton"
               BasedOn="{StaticResource ModernCalendarButtonStyle}" />
        <Style TargetType="hc:DatePicker"
               BasedOn="{StaticResource ModernHandyDatePickerStyle}" />
        <pluginConverters:SensorTypeToStringConverter x:Key="SensorTypeToStringConverter" />
        <pluginConverters:PhysicalUnitToStringConverter x:Key="PhysicalUnitToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" />
        <pluginConverters:BooleanInverseConverter x:Key="BooleanInverseConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <Grid Grid.Row="0"
              Margin="0,0,0,20">
            <TextBlock Text="传感器配置"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TitleBrush}"
                       VerticalAlignment="Center" />
        </Grid>

        <!-- 主内容区域：传感器详情 -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 制造商 -->
                <Grid Grid.Row="0"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="制造商 *:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="请输入制造商" />
                </Grid>

                <!-- 型号 -->
                <Grid Grid.Row="1"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="传感器型号 *:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.Model, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="请输入型号" />
                </Grid>

                <!-- 传感器名称 -->
                <Grid Grid.Row="2"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="传感器名称:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.ConfigName, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="请输入传感器名称" />
                </Grid>

                <!-- 传感器类型 -->
                <Grid Grid.Row="3"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="传感器类型:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding SensorTypeOptions}"
                              SelectedItem="{Binding SelectedSensor.SensorType, UpdateSourceTrigger=PropertyChanged}"
                              FontSize="13"
                              Height="36">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource SensorTypeToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- 轴数选择（仅加速度计显示） -->
                <Grid Grid.Row="4"
                      Margin="0,0,0,15"
                      Visibility="{Binding SelectedSensor.SupportsAxisSelection, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="轴数:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <StackPanel Grid.Column="1"
                                 Orientation="Horizontal">
                        <RadioButton x:Name="SingleAxisRadioButton"
                                     Content="单轴"
                                     Margin="0,0,20,0"
                                     VerticalAlignment="Center"
                                     GroupName="AxisSelection"
                                     Checked="SingleAxisRadioButton_Checked"
                                     Unchecked="SingleAxisRadioButton_Unchecked">
                            <RadioButton.IsChecked>
                                <Binding Path="SelectedSensor.IsThreeAxis" 
                                         Mode="OneWay">
                                    <Binding.Converter>
                                        <pluginConverters:BooleanInverseConverter />
                                    </Binding.Converter>
                                </Binding>
                            </RadioButton.IsChecked>
                        </RadioButton>
                        <RadioButton x:Name="ThreeAxisRadioButton"
                                     Content="三轴"
                                     IsChecked="{Binding SelectedSensor.IsThreeAxis, Mode=OneWay}"
                                     VerticalAlignment="Center"
                                     GroupName="AxisSelection"
                                     Checked="ThreeAxisRadioButton_Checked" />
                    </StackPanel>
                </Grid>

                <!-- 序列号 -->
                <Grid Grid.Row="5"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="序列号:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="请输入序列号" />
                </Grid>

                <!-- 单轴灵敏度 -->
                <Grid Grid.Row="6"
                      Margin="0,0,0,15"
                      Visibility="{Binding SelectedSensor.IsThreeAxisSensor, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="灵敏度:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedSensor.Sensitivity, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Height="36" />
                        <ComboBox Grid.Column="2"
                                  x:Name="SensitivityUnitComboBox"
                                  ItemsSource="{Binding SensitivityUnitOptions}"
                                  SelectedItem="{Binding SelectedSensor.SensitivityUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Text="{Binding SelectedSensor.SensitivityUnit,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  FontSize="13"
                                  Height="36"
                                  hc:InfoElement.Placeholder="单位" />
                    </Grid>
                </Grid>

                <!-- 三轴灵敏度 -->
                <Grid Grid.Row="6"
                      Margin="0,0,0,15"
                      Visibility="{Binding SelectedSensor.IsThreeAxisSensor, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="灵敏度:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0" />
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <!-- X轴灵敏度 -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="X轴:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center"
                                       MinWidth="40" />
                            <TextBox Grid.Column="2"
                                     Text="{Binding SelectedSensor.SensitivityX, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Height="36"
                                     hc:InfoElement.Placeholder="X轴灵敏度" />
                            <ComboBox Grid.Column="4"
                                      ItemsSource="{Binding SensitivityUnitOptions}"
                                      SelectedItem="{Binding SelectedSensor.SensitivityUnitX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Text="{Binding SelectedSensor.SensitivityUnitX,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      FontSize="13"
                                      Height="36"
                                      hc:InfoElement.Placeholder="单位" />
                        </Grid>
                        
                        <!-- Y轴灵敏度 -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Y轴:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center"
                                       MinWidth="40" />
                            <TextBox Grid.Column="2"
                                     Text="{Binding SelectedSensor.SensitivityY, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Height="36"
                                     hc:InfoElement.Placeholder="Y轴灵敏度" />
                            <ComboBox Grid.Column="4"
                                      ItemsSource="{Binding SensitivityUnitOptions}"
                                      SelectedItem="{Binding SelectedSensor.SensitivityUnitY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Text="{Binding SelectedSensor.SensitivityUnitY,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      FontSize="13"
                                      Height="36"
                                      hc:InfoElement.Placeholder="单位" />
                        </Grid>
                        
                        <!-- Z轴灵敏度 -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Z轴:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       VerticalAlignment="Center"
                                       MinWidth="40" />
                            <TextBox Grid.Column="2"
                                     Text="{Binding SelectedSensor.SensitivityZ, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Height="36"
                                     hc:InfoElement.Placeholder="Z轴灵敏度" />
                            <ComboBox Grid.Column="4"
                                      ItemsSource="{Binding SensitivityUnitOptions}"
                                      SelectedItem="{Binding SelectedSensor.SensitivityUnitZ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Text="{Binding SelectedSensor.SensitivityUnitZ,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      FontSize="13"
                                      Height="36"
                                      hc:InfoElement.Placeholder="单位" />
                        </Grid>
                    </Grid>
                </Grid>

                <!-- 物理单位 -->
                <Grid Grid.Row="7"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="物理单位:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Column="1"
                              x:Name="PhysicalUnitComboBox"
                              ItemsSource="{Binding PhysicalUnitOptions}"
                              DisplayMemberPath="DisplayText"
                              SelectedValuePath="FullName"
                              SelectedValue="{Binding SelectedSensor.PhysicalUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              FontSize="13"
                              Height="36"
                              hc:InfoElement.Placeholder="请选择物理单位" />
                </Grid>

                <!-- 测量范围 -->
                <Grid Grid.Row="8"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="测量范围:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedSensor.MeasurementRangeMin, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Height="36"
                                 hc:InfoElement.Placeholder="最小值" />
                        <TextBlock Grid.Column="1"
                                   Text="~"
                                   FontSize="13"
                                   Margin="8,0"
                                   VerticalAlignment="Center" />
                        <TextBox Grid.Column="2"
                                 Text="{Binding SelectedSensor.MeasurementRangeMax, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Height="36"
                                 hc:InfoElement.Placeholder="最大值" />
                    </Grid>
                </Grid>

                <!-- 频率范围 -->
                <Grid Grid.Row="9"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="频率范围 (Hz):"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedSensor.FrequencyRangeMin, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Height="36"
                                 hc:InfoElement.Placeholder="最小值" />
                        <TextBlock Grid.Column="1"
                                   Text="~"
                                   FontSize="13"
                                   Margin="8,0"
                                   VerticalAlignment="Center" />
                        <TextBox Grid.Column="2"
                                 Text="{Binding SelectedSensor.FrequencyRangeMax, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Height="36"
                                 hc:InfoElement.Placeholder="最大值" />
                    </Grid>
                </Grid>

                <!-- 校准因子 -->
                <Grid Grid.Row="10"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="校准系数:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.CalibrationFactor, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36" />
                </Grid>

                <!-- 校准日期 -->
                <Grid Grid.Row="11"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="校准日期:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <hc:DatePicker x:Name="CalibrationDatePicker"
                                   
                                   Grid.Column="1"
                                   SelectedDate="{Binding SelectedSensor.CalibrationDate, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="13"
                                   hc:BorderElement.CornerRadius="10"
                                   Height="44"
                                   VerticalAlignment="Center"
                                   hc:InfoElement.Placeholder="请选择日期">
                        <!--<hc:DatePicker.Resources>
                            --><!-- CalendarButton 样式 - 确保年份和月份选择器可见 --><!--
                            <Style TargetType="CalendarButton"
                                   BasedOn="{StaticResource ModernCalendarButtonStyle}" />
                        </hc:DatePicker.Resources>-->
                    </hc:DatePicker>
                </Grid>

                <!-- 下次校准日期 -->
                <Grid Grid.Row="12"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="下次校准日期:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center" />
                    <hc:DatePicker x:Name="NextCalibrationDatePicker"
                                   Grid.Column="1"
                                   
                                   SelectedDate="{Binding SelectedSensor.NextCalibrationDate, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="13"
                                   Height="44"
                                   VerticalAlignment="Center"
                                   hc:InfoElement.Placeholder="请选择日期">
                        <!--<hc:DatePicker.Resources>
                            --><!-- CalendarButton 样式 - 确保年份和月份选择器可见 --><!--
                            <Style TargetType="CalendarButton"
                                   BasedOn="{StaticResource ModernCalendarButtonStyle}" />
                        </hc:DatePicker.Resources>-->
                    </hc:DatePicker>
                </Grid>

                <!-- 备注 -->
                <Grid Grid.Row="13"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="备注:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0" />
                    <TextBox Grid.Column="1"
                             Text="{Binding SelectedSensor.Notes, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="60"
                             hc:InfoElement.Placeholder="请输入备注信息" />
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- 底部提示 -->
        <TextBlock Grid.Row="2"
                   Text="提示：在此管理系统中使用的所有传感器配置。传感器配置可以分配给数据采集设备的通道。"
                   FontSize="12"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap" />
    </Grid>
</UserControl>


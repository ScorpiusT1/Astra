<UserControl x:Class="Astra.Plugins.DataAcquisition.Views.DataAcquisitionBaseConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Astra.Plugins.DataAcquisition.Views"
             xmlns:converters="clr-namespace:Astra.Plugins.DataAcquisition.Converters"
             xmlns:viewmodels="clr-namespace:Astra.Plugins.DataAcquisition.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:DataAcquisitionBaseConfigViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="CheckBox"
               BasedOn="{StaticResource ModernCheckBoxStyle}" />

        <Style TargetType="TextBox"
               BasedOn="{StaticResource DefaultModernTextBoxStyle}" />

        <Style TargetType="TextBlock"
               BasedOn="{StaticResource ModrenTextBlockStyle}" />

        <Style TargetType="ComboBox"
               BasedOn="{StaticResource ModernComboBoxStyle}" />

        <!-- 值转换器 -->
        <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        <converters:HzToKHzConverter x:Key="HzToKHzConverter" />

    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0"
                       Text="数据采集设备配置"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TitleBrush}"
                       Margin="0,0,0,20" />

            <!-- 设备厂家 -->
            <Grid Grid.Row="1"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="设备厂家 *:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AvailableManufacturers}"
                          SelectedItem="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                          FontSize="13"
                          Height="36"
                          hc:InfoElement.Placeholder="请选择设备厂家" />
            </Grid>

            <!-- 设备型号 -->
            <Grid Grid.Row="2"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="设备型号 *:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AvailableModels}"
                          SelectedItem="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding Manufacturer, Converter={StaticResource IsNotNullConverter}}"
                          FontSize="13"
                          Height="36"
                          hc:InfoElement.Placeholder="请选择设备型号" />
            </Grid>

            <!-- 设备描述 -->
            <TextBlock Grid.Row="3"
                       Text="{Binding DeviceDescription}"
                       FontSize="12"
                       FontStyle="Italic"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       Visibility="{Binding DeviceDescription, Converter={StaticResource IsNotNullConverter}}" />

            <!-- 设备名称 -->
            <Grid Grid.Row="4"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="设备名称:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <TextBox Grid.Column="1"
                         Text="{Binding ConfigName, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         Height="36"
                         hc:InfoElement.Placeholder="请输入设备名称" />
            </Grid>

            <!-- 序列号 -->
            <Grid Grid.Row="5"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="序列号:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <TextBox Grid.Column="1"
                         Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         Height="36"
                         hc:InfoElement.Placeholder="请输入设备序列号" />
            </Grid>

            <!-- 采样率 -->
            <Grid Grid.Row="6"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="采样率 (kHz):"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding SampleRateOptions}"
                          SelectedItem="{Binding SampleRate, UpdateSourceTrigger=PropertyChanged}"
                          FontSize="13"
                          Height="36"
                          hc:InfoElement.Placeholder="请选择采样率">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource HzToKHzConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- 通道数量（只读，根据型号自动设置） -->
            <Grid Grid.Row="7"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="通道数量:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           Text="{Binding ChannelCount, StringFormat='{}{0} 通道'}"
                          FontSize="13"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           FontWeight="Medium">
                    <TextBlock.ToolTip>
                        <TextBlock Text="通道数量根据设备型号自动设置，切换型号时会自动调整" />
                    </TextBlock.ToolTip>
                </TextBlock>
            </Grid>

            <!-- 缓冲区大小 -->
            <Grid Grid.Row="8"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="缓冲区大小:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center" />
                <TextBox Grid.Column="1"
                         Text="{Binding BufferSize, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13"
                         Height="36"
                         hc:InfoElement.Placeholder="请输入缓冲区大小" />
            </Grid>

            <!-- 自动启动 -->
            <CheckBox Grid.Row="9"
                      Content="插件启动时自动开始采集"
                      FontSize="13"
                      FontWeight="Medium"
                      IsChecked="{Binding AutoStart}"
                      Margin="0,0,0,15" />

            <!-- 启用状态 -->
            <CheckBox Grid.Row="10"
                      Content="启用设备"
                      IsChecked="{Binding IsEnabled}"
                      FontSize="13"
                      FontWeight="Medium"
                      Margin="0,0,0,15" />

            <!-- 分组和槽位 -->
            <Grid Grid.Row="11"
                  Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="分组ID:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,5" />
                    <TextBox Grid.Row="1"
                             Text="{Binding GroupId, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="G0" />
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="槽位ID:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,5" />
                    <TextBox Grid.Row="1"
                             Text="{Binding SlotId, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             Height="36"
                             hc:InfoElement.Placeholder="S0" />
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

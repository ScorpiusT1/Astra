<UserControl x:Class="Astra.Views.SequenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Astra.UI.Controls;assembly=Astra.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Astra.Views"
             xmlns:viewmodels="clr-namespace:Astra.ViewModels"
            
             d:DataContext="{d:DesignInstance Type=viewmodels:SequenceViewModel}"
             mc:Ignorable="d"
             Background="{DynamicResource SurfaceBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.15*" />
        </Grid.ColumnDefinitions>

        <controls:FlowEditor x:Name="FlowEditor"
                             ClipToBounds="True"
                             ToolBoxItemsSource="{Binding ToolBoxItemsSource}"
                             CanvasItemsSource="{Binding CanvasItemsSource}"
                             EdgeItemsSource="{Binding EdgeItemsSource}"
                             ToolBoxWidth="90" />
    </Grid>
</UserControl>

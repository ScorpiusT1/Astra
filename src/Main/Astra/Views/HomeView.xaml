<UserControl x:Class="Astra.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Astra.UI.Controls;assembly=Astra.UI"
             xmlns:local="clr-namespace:Astra.Views"
             xmlns:viewmodels="clr-namespace:Astra.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             mc:Ignorable="d"
             Background="{DynamicResource SurfaceBrush}"
            
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧：预览区 -->
        <Border Grid.Column="0"
                Background="#F5F5F5"
                Padding="20">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="预览区域"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />
                <Button Content="切换到Person"
                        Click="LoadPerson_Click"
                        Margin="5" />
                <Button Content="切换到Config"
                        Click="LoadConfig_Click"
                        Margin="5" />
                <Button Content="动态隐藏Age属性"
                        Click="HideAge_Click"
                        Margin="5" />
                <Button Content="隐藏/显示基本信息组"
                        Click="HideBasicInfoGroup_Click"
                        Margin="5" />
                <Button Content="隐藏/显示激活属性"
                        Click="HideIsActive_Click"
                        Margin="5" />
                <Button Content="获取所有属性值"
                        Click="GetValues_Click"
                        Margin="5" />
            </StackPanel>
        </Border>

        <!-- 右侧：属性编辑器 -->
        <controls:PropertyEditorControl x:Name="PropertyEditor"
                                     Grid.Column="1"
                                    
                                     ShowSearchBox="True"
                                     EnableCategory="True"
                                     PropertySortMode="Categorized"
                                     LabelWidthRatio="0.1"
                                     PropertyValueChanged="PropertyEditor_PropertyValueChanged"
                                     Margin="10" />
    </Grid>
</UserControl>

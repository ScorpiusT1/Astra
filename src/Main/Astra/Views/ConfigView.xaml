<UserControl x:Class="Astra.Views.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Astra.Views"
             xmlns:viewmodels="clr-namespace:Astra.ViewModels"
             xmlns:models="clr-namespace:Astra.Models"
             xmlns:behaviors="clr-namespace:Astra.Behaviors"
             d:DataContext="{d:DesignInstance Type=viewmodels:ConfigViewModel}"
             mc:Ignorable="d"
             Background="{DynamicResource SurfaceBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <!-- ä¸»å†…å®¹åŒºåŸŸ -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- å·¦ä¾§æ ‘çŠ¶å¯¼èˆª -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- æ ‡é¢˜è¡Œ -->
                    <TextBlock Grid.Row="0"
                               Text="é…ç½®æ ‘"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}"
                               Margin="16,16,16,12"
                               VerticalAlignment="Center" />

                    <!-- æ ‘çŠ¶åˆ—è¡¨ï¼ˆå¯æ»šåŠ¨ï¼‰ -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <TreeView x:Name="ConfigTreeView"
                                  ItemsSource="{Binding TreeNodes}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="8"
                                  AllowDrop="True">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem"
                                       BasedOn="{StaticResource TreeNodeStyle}">
                                    <Setter Property="IsExpanded"
                                            Value="{Binding IsExpanded, Mode=TwoWay}" />
                                    <Setter Property="IsSelected"
                                            Value="{Binding IsSelected, Mode=TwoWay}" />
                                    <Setter Property="AllowDrop"
                                            Value="True" />
                                    <Setter Property="behaviors:TreeViewItemBehaviors.SelectedCommand"
                                            Value="{Binding DataContext.NodeSelectedCommand, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                                    <Setter Property="behaviors:TreeViewItemBehaviors.SelectedCommandParameter"
                                            Value="{Binding}" />
                                    <Setter Property="behaviors:TreeViewItemBehaviors.DragDropCommand"
                                            Value="{Binding DataContext.DragDropNodeCommand, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                                </Style>
                            </TreeView.ItemContainerStyle>

                            <TreeView.Resources>
                                <!-- ç¬¬ä¸€å±‚ï¼šè®¾å¤‡é…ç½®/ä¼ æ„Ÿå™¨é…ç½® -->
                                <HierarchicalDataTemplate DataType="{x:Type models:TreeNode}"
                                                          ItemsSource="{Binding Children}">
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Header}"
                                                       Margin="6,0,0,0"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource AddButton}"
                                                Margin="8,0,4,0"
                                                Visibility="{Binding ShowAddButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Command="{Binding DataContext.AddNodeCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                CommandParameter="{Binding}" />
                                        <Button Grid.Column="2"
                                                Style="{StaticResource DeleteButton}"
                                                Margin="0,0,0,0"
                                                Visibility="{Binding ShowDeleteButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Command="{Binding DataContext.DeleteNodeCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="åˆ é™¤" />
                                    </Grid>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </ScrollViewer>

                    <!-- ä¿å­˜æŒ‰é’® -->
                    <Border Grid.Row="2"
                            Background="Transparent"
                            Padding="16,12,16,16"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,0">
                        <Button Content="ðŸ’¾ ä¿å­˜é…ç½®"
                                Padding="16,8"
                                MinWidth="120"
                                Height="36"
                                FontSize="13"
                                Command="{Binding SaveConfigurationsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch" />
                    </Border>
                </Grid>
            </Border>

            <!-- å³ä¾§é…ç½®é¢æ¿ -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0"
                    Margin="20"
                    CornerRadius="8">
                <ContentControl x:Name="ConfigContentRegion"
                                Margin="0"
                                 />
            </Border>
        </Grid>
    </Grid>
</UserControl>

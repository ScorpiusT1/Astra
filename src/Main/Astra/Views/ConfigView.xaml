<UserControl x:Class="Astra.Views.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Astra.Views"
             xmlns:viewmodels="clr-namespace:Astra.ViewModels"
             xmlns:behaviors="clr-namespace:Astra.Behaviors"
             d:DataContext="{d:DesignInstance Type=viewmodels:ConfigViewModel}"
             mc:Ignorable="d"
             Background="{DynamicResource SurfaceBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧树状导航 -->
            <Border Grid.Column="0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="配置树"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Margin="16,16,16,12" />

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <TreeView x:Name="ConfigTreeView"
                                  ItemsSource="{Binding TreeNodes}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Padding="8">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem"
                                       BasedOn="{StaticResource TreeNodeStyle}">
                                    <Setter Property="IsExpanded"
                                            Value="{Binding IsExpanded, Mode=TwoWay}" />
                                    <Setter Property="IsSelected"
                                            Value="{Binding IsSelected, Mode=TwoWay}" />
                                    <Setter Property="behaviors:TreeViewItemBehaviors.SelectedCommand"
                                            Value="{Binding DataContext.NodeSelectedCommand, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                                    <Setter Property="behaviors:TreeViewItemBehaviors.SelectedCommandParameter"
                                            Value="{Binding}" />
                                </Style>
                            </TreeView.ItemContainerStyle>

                            <TreeView.Resources>
                                <!-- 第一层：设备配置/传感器配置 -->
                                <HierarchicalDataTemplate DataType="{x:Type viewmodels:TreeNodeViewModel}"
                                                          ItemsSource="{Binding Children}">
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Header}"
                                                       Margin="6,0,0,0"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="+"
                                                Style="{StaticResource AddButton}"
                                                Margin="8,0,0,0"
                                                Visibility="{Binding ShowAddButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Command="{Binding DataContext.AddDeviceConfigCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 右侧配置面板 -->
            <Border Grid.Column="1"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0"
                    Margin="20"
                    CornerRadius="8">
                <ContentControl x:Name="ConfigContentRegion"
                                Margin="0"
                                Loaded="ConfigContentRegion_Loaded" />
            </Border>
        </Grid>
    </Grid>
</UserControl>

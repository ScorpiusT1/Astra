<Window x:Class="Astra.Bootstrap.UI.SplashScreenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Astra.Bootstrap.UI"
        xmlns:helpers="clr-namespace:Astra.UI.Helpers;assembly=Astra.UI"
        mc:Ignorable="d"
        Title="正在启动..."
        Height="450"
        Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- 渐变动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
        </Storyboard>

        <!-- 脉冲动画（Logo） -->
        <Storyboard x:Key="PulseAnimation"
                    RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1"
                             To="1.05"
                             Duration="0:0:1"
                             AutoReverse="True" />
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1"
                             To="1.05"
                             Duration="0:0:1"
                             AutoReverse="True" />
        </Storyboard>

    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}" />
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="RootGrid">
        <Border x:Name="MainBorder"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Opacity="0"
                helpers:BorderClipHelper.ClipToBounds="True"
                CornerRadius="16"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  Opacity="0.8"
                                  BlurRadius="40"
                                  ShadowDepth="8"
                                  Direction="270" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*" />
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo 区域 -->
                <Grid Grid.Row="0">
                    <Viewbox Width="150"
                             Height="150"
                             VerticalAlignment="Bottom"
                             RenderTransformOrigin="0.5,0.5">
                        <Viewbox.RenderTransform>
                            <ScaleTransform x:Name="LogoScale"
                                            ScaleX="1"
                                            ScaleY="1" />
                        </Viewbox.RenderTransform>

                        <Canvas Width="100"
                                Height="100">
                            <!-- 外圈 -->
                            <Ellipse Width="100"
                                     Height="100"
                                     StrokeThickness="3"
                                     Stroke="{DynamicResource PrimaryBrush}" />

                            <!-- 内圈 -->
                            <Ellipse Width="70"
                                     Height="70"
                                     Canvas.Left="15"
                                     Canvas.Top="15">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="{DynamicResource PrimaryColor}"
                                                      Offset="0" />
                                        <GradientStop Color="{DynamicResource DarkPrimaryColor}"
                                                      Offset="1" />
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Logo 文字 -->
                            <TextBlock Text="{Binding LogoText, FallbackValue='AS'}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource ReverseTextBrush}"
                                       Canvas.Left="32"
                                       Canvas.Top="30" />
                        </Canvas>
                    </Viewbox>
                </Grid>

                <!-- 标题区域 -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            Margin="40,0,40,0">
                    <TextBlock x:Name="TitleText"
                               TextWrapping="Wrap"
                               Text="{Binding Title, FallbackValue='应用程序正在启动'}"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TitleBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12" />

                    <TextBlock x:Name="SubtitleText"
                               Text="{Binding Subtitle, FallbackValue='请稍候...'}"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- 进度区域 -->
                <Grid Grid.Row="2"
                      Margin="50,5,50,35">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="14" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 状态消息 -->
                    <TextBlock x:Name="StatusText"
                               Grid.Row="0"
                               Text="正在初始化..."
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Left" />

                    <!-- 进度百分比 -->
                    <TextBlock x:Name="PercentageText"
                               Grid.Row="0"
                               Text="0%"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Right" />

                    <!-- 进度条容器 -->
                    <Border Grid.Row="2"
                            Height="6"                          
                            Background="{DynamicResource DefaultBrush}"
                            CornerRadius="3">
                        <!-- 进度条 -->
                        <Border x:Name="ProgressIndicator"
                                HorizontalAlignment="Left"
                                Width="0"
                                CornerRadius="3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,0">
                                    <GradientStop Color="{DynamicResource PrimaryColor}"
                                                  Offset="0" />
                                    <GradientStop Color="{DynamicResource LightPrimaryColor}"
                                                  Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <!-- 进度条发光效果 -->
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                                  BlurRadius="8"
                                                  ShadowDepth="0"
                                                  Opacity="0.6" />
                            </Border.Effect>
                        </Border>
                    </Border>

                    <!-- 详细信息 -->
                    <TextBlock x:Name="DetailsText"
                               Grid.Row="4"
                               Text=""
                               FontSize="11"
                               Foreground="{DynamicResource ThirdlyTextBrush}"
                               TextTrimming="CharacterEllipsis"
                               HorizontalAlignment="Left" />
                </Grid>

                <Border Grid.Row="3"
                        Margin="30,0,30,0"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource BorderBrush}" />

                <!-- ⭐ 版权信息区域 -->
                <Border Grid.Row="4"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,0"
                        Padding="30,20,30,18">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 版本号 -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding Version, FallbackValue='v1.0.0'}"
                                   FontSize="10"
                                   Foreground="{DynamicResource ThirdlyTextBrush}"
                                   VerticalAlignment="Center" />

                        <!-- 版权信息 -->
                        <TextBlock Grid.Column="1"
                                   x:Name="CopyrightText"
                                   Text="{Binding Copyright, FallbackValue='© 2025 比亚迪股份有限公司. All rights reserved.'}"
                                   FontSize="11"
                                   Foreground="{DynamicResource ThirdlyTextBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />

                        <!-- 网站链接（可选） -->
                        <TextBlock Grid.Column="2"
                                   VerticalAlignment="Center">
                            <Hyperlink NavigateUri="{Binding Website, FallbackValue='https://www.bydglobal.com/'}"
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       TextDecorations="None">
                                <Run Text="官网"
                                     FontSize="10" />
                            </Hyperlink>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- 关闭按钮 -->
                <Button x:Name="CloseButton"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"
                        ToolTip="取消启动"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,12,12,0"
                        Grid.RowSpan="3" />
            </Grid>
        </Border>
    </Grid>
</Window>
